{
  "extends": "standard",
  "env": { "mocha": true },
  "plugins": [
    "chai-friendly"
  ],
  "rules": {
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "semi": ["error", "always"],
    "space-before-blocks": ["error"],
    "comma-dangle": ["error", "always-multiline"],
    "quotes": ["error", "single"],
    "brace-style": ["error", "stroustrup"],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "*",
        "next": "return"
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ]
  }
}
